<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Writer.RegistrationWriter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/custom_toolbar"/>
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
           android:src="@drawable/woman" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="First Name:"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="40dp"
            android:drawableLeft="@drawable/ic_baseline_account_circle_24"
            android:drawablePadding="10dp"
            android:hint="Enter your first name"
            android:id="@+id/fname"
            android:inputType="text"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="Last Name:"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="40dp"
            android:drawableLeft="@drawable/ic_baseline_account_circle_24"
            android:drawablePadding="10dp"
            android:hint="Enter your last name"
            android:id="@+id/lname"
            android:inputType="text"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="Login User Name"
            android:textColor="@android:color/black"
            android:layout_marginTop="18dp" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="40dp"
            android:drawableLeft="@drawable/ic_baseline_account_circle_24"
            android:drawablePadding="10dp"
            android:hint="Enter your user name"
            android:id="@+id/username"
            android:inputType="text"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="Gender:"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp" />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:textSize="18sp"
                android:id="@+id/male"
                android:textColor="@android:color/black"
                android:text="Male"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:textSize="18sp"
                android:id="@+id/female"
                android:textColor="@android:color/black"
                android:text="Female"/>
        </RadioGroup>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="Date of Birth:"
                android:textColor="@android:color/black"
                android:layout_marginTop="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:id="@+id/dob"
                android:textColor="@android:color/black"
                android:layout_marginTop="25dp" />
        </LinearLayout>
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="105dp"
            android:id="@+id/calender_btn"
            android:src="@drawable/calendar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="Contact Number:"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="40dp"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:drawablePadding="10dp"
            android:hint="Enter your mobile number"
            android:id="@+id/phoneNo"
            android:inputType="phone"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="Email Address:"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="40dp"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="10dp"
            android:hint="Enter your email-id"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="Please select language Know:"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/language"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="35dp"
                android:textSize="18sp"
                android:id="@+id/lang_eng"
                android:text="English"/>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="25dp"
                android:textSize="18sp"
                android:id="@+id/lang_hind"
                android:text="Hindi"/>
            <androidx.appcompat.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="25dp"
                android:textSize="18sp"
                android:id="@+id/lang_guj"
                android:text="Gujarati"/>
        </LinearLayout>
        <Spinner
            android:layout_width="105dp"
            android:layout_height="35dp"
            android:id="@+id/spinner"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="105dp"
            android:background="@drawable/spinner_border"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="Stream in Secondary Education:"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/spin_school"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />
        </LinearLayout>
        <Spinner
            android:layout_width="115dp"
            android:layout_height="35dp"
            android:id="@+id/spinner_school"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/spinner_border"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="UnderGraduation Degree:"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/spin_ug"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />
        </LinearLayout>
        <Spinner
            android:layout_width="105dp"
            android:layout_height="35dp"
            android:id="@+id/spinner_undergraduation"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/spinner_border"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="PostGraduation Degree:"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/spin_pg"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />
        </LinearLayout>
        <Spinner
            android:layout_width="105dp"
            android:layout_height="35dp"
            android:id="@+id/spinner_postgraduation"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/spinner_border"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="Current work status:"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/spin_work"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />
        </LinearLayout>
        <Spinner
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:id="@+id/spinner_work"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/spinner_border"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="Password:"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="10dp"
            android:layout_marginLeft="40dp"
            android:hint="Enter your password"
            android:id="@+id/password"
            android:inputType="textPassword"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:text="Confirm Password:"
            android:textColor="@android:color/black"
            android:layout_marginTop="15dp" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="10dp"
            android:layout_marginLeft="40dp"
            android:hint="Enter your confirm password"
            android:id="@+id/cpassword"
            android:inputType="textPassword"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" />
        <Button
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:id="@+id/register_writer"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:text="Register"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.CubeGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/colorAccent" />
    </LinearLayout>

</ScrollView>
