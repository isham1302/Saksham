<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Student.RateWriter">
    <include layout="@layout/request_writer_toolbar"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:text="Write the Name of Exam Writer:"
    android:layout_marginLeft="10dp"
    android:textColor="@android:color/black"
    android:layout_marginTop="30dp" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="40dp"
        android:hint="Full Name of Writer"
        android:id="@+id/examWriter_name"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/black"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Give stars to your writer"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rate_us"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="30dp" />
    </LinearLayout>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rate"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:stepSize="0.5"
            android:numStars="5"
            android:rating="2.5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Write a review on your exam writer"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="40dp"
        android:hint="Review"
        android:id="@+id/review"
        android:inputType="textMultiLine"
        android:textColorHint="@android:color/black"
        android:textSize="18sp" />
    <Button
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:id="@+id/submit_rate"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="Submit"
        android:layout_marginLeft="115dp"
        android:textColor="#ffffff"
        android:textSize="25sp" />

</LinearLayout>