<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.ProfileStud">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/profile_toolbar"/>
        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:id="@+id/profilePic"
            android:src="@drawable/woman"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="First Name:"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/stud_fname"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="Last Name:"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/stud_lname"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="Login User Name"
                android:textColor="@android:color/black"
                android:layout_marginTop="18dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/stud_username"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="Gender:"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/stud_gender"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="Date of Birth:"
                android:textColor="@android:color/black"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/stud_dob"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="Contact Number:"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/stud_num"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="Email Address:"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/stud_email"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="School/College Name:"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/stud_schoolClg"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Course obtained:"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/stud_course"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Password"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/stud_password"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />

        </LinearLayout>
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="120dp"
            android:id="@+id/save"
            android:background="@color/colorAccent"
            android:text="Save"
            android:layout_marginLeft="65dp"
            android:textColor="#ffffff"
            android:textSize="25sp" />

    </LinearLayout>

</ScrollView>